<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitmap.szlizb.musicsample.MainActivity">
<TextView
    android:id="@+id/musicTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/music_title"
    android:background="@color/title_background"
    android:textSize="@dimen/title_size"
    android:textColor="@color/music_title"
    android:gravity="center"/>
    <RadioGroup
        android:id="@+id/rgMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicTitle"
        android:orientation="horizontal">
    <RadioButton
        android:id="@+id/newMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicTitle"
        android:text="@string/New_music"
        android:textSize="@dimen/Music_size"
        android:gravity="center"
        android:layout_weight="1"
        android:button="@null"/>
    <RadioButton
        android:id="@+id/HotMusic"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicTitle"
        android:text="@string/New_music"
        android:button="@null"
        android:textSize="@dimen/Music_size"
        android:layout_weight="1"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_music"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/musicTitle"></android.support.v4.view.ViewPager>

</RelativeLayout>
